    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Testing cli",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}\\index.js",
            "envFile": "${workspaceFolder}\\.env",
            "args": [
                "-e",
                "${env:TESTING_EMAIL}",
                "-p",
                "{env:TESTING_PASSWORD}",
                "--directory",
                "${workspaceFolder}/books"
            ],
            "console": "integratedTerminal"
        }
    ]
}
